<% if  @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
    <h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
    <h3><%= restaurant.description %></h3>
    <h3>Star rating: <%= star_rating(restaurant.average_rating) %></h3>
    <% restaurant.reviews.each do |review| %>
      <p><%= review.thoughts %> <%= review.rating %>
      <%= pluralize review.endorsements.count, 'endorsement' %>
      <%= link_to "Endorse Review", "/reviews/#{review.id}/endorsements", method: :post %></p>
    <% end %>
    <% if current_user and !current_user.has_reviewed?(restaurant) %>
      <%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %>
    <% end %>
    <% if restaurant.belongs_to?(current_user) %>
      <%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %>
      <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete%>
    <% end %>

  <% end %>
<% else %>
  <h1>No restaurants yet</h1>
<% end %>

<br>
<p><a href="/restaurants/new">Add a restaurant</a></p>
